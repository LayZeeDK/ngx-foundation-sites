# Editor configuration, see http://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
max_line_length = 80
trim_trailing_whitespace = true

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[*.json]
insert_final_newline = false
max_line_length = off

[*.{yaml,yml}]
max_line_length = off

[*.{js, ts}]
quote_type = single

[*.{css, scss}]
quote_type = single

[*.html]
max_line_length = 120
